<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %>
	<div class="input">
		<%= f.text_field :name %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label :purpose %>
	<div class="input">
		<%= f.text_area :purpose, :class => "xxlarge", :rows => "3" %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label :description %>
	<div class="input">
		<%= f.text_area :description, :class => "xxlarge", :rows => "7" %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label :photo %>
	<div class="input">
		<%= f.file_field :photo %>
	</div>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn primary"%>
  </div>
<% end %>
